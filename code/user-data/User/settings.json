{
	"C_Cpp.updateChannel": "Insiders",

	// #region editor config
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[java]": {
		"editor.defaultFormatter": "redhat.java"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.python"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"editor.acceptSuggestionOnEnter": "off",
	"editor.bracketPairColorization.enabled": true,
	"editor.fontFamily": "Hack Nerd Font",
	"editor.fontSize": 14,
	"editor.insertSpaces": false,
	"editor.lineNumbers": "on",
	"editor.minimap.enabled": false,
	"editor.snippetSuggestions": "top",
	"editor.tabCompletion": "on",
	"editor.tabSize": 4,
	// #endregion

	"explorer.confirmDragAndDrop": false,
	"extensions.autoUpdate": "onlyEnabledExtensions",
	"files.exclude": {
		"**/.DS_Store": false,
		"**/.git": false,
		"**/.hg": false,
		"**/.svn": false,
		"**/CVS": false,
		"**/.classpath": false,
		"**/.project": false,
		"**/.settings": false,
		"**/.factorypath": false
	},

	// #region gitlens
	"gitlens.codeLens.enabled": false,
	"gitlens.currentLine.enabled": false,
	"gitlens.defaultDateFormat": "YYYY/MM/DD, h:mmA",
	"gitlens.defaultDateShortFormat": "YYYY/MM/DD",
	"gitlens.defaultDateStyle": "absolute",
	"gitlens.defaultTimeFormat": "h:mmA",
	"gitlens.hovers.currentLine.over": "line",
	"gitlens.hovers.enabled": false,
	// #endregion

	// #region html format
	"html.format.contentUnformatted": "pre,code,textarea",
	"html.format.endWithNewline": true,
	"html.format.extraLiners": "head, body, /html",
	"html.format.indentHandlebars": false,
	"html.format.indentInnerHtml": false,
	"html.format.maxPreserveNewLines": null,
	"html.format.preserveNewLines": false,
	"html.format.wrapAttributes": "auto",
	"html.format.wrapLineLength": 80,
	// #endregion

	"intelephense.format.braces": "k&r",

	// #region java
	"java.configuration.runtimes": [
		{
			"name": "JavaSE-1.8",
			"path": "/usr/lib/jvm/java-8-openjdk/",
			"default": false
		},
		{
			"name": "JavaSE-11",
			"path": "/usr/lib/jvm/java-11-openjdk/",
			"default": true
		},
		{
			"name": "JavaSE-15",
			"path": "/usr/lib/jvm/java-15-openjdk/",
			"default": false
		}
	],
	"java.home": "/usr/lib/jvm/java-11-openjdk/",
	"java.project.importOnFirstTimeStartup": "automatic",
	"java.refactor.renameFromFileExplorer": "autoApply",
	// #endregion

	// #region latex
	"latex-workshop.bibtex-format.tab": "tab",
	"latex-workshop.bind.altKeymap.enabled": true,
	"latex-workshop.latex.recipes": [
		{
			"name": "pog",
			"tools": [
				"pdf"
			]
		}
	],
	"latex-workshop.latex.tools": [
		{
			"name": "pdf",
			"command": "pdf",
			"args": [
				"%DOC%"
			],
			"env": {}
		}
	],
	"latex-workshop.view.pdf.viewer": "tab",
	// #endregion

	// #region liveshare config
	"liveshare.allowGuestDebugControl": true,
	"liveshare.allowGuestTaskControl": true,
	"liveshare.allowInvites": "all",
	"liveshare.anonymousGuestApproval": "accept",
	"liveshare.authenticationProvider": "GitHub",
	"liveshare.diagnosticLogging": true,
	"liveshare.diagnosticMode": true,
	"liveshare.openSharedServers": false,
	"liveshare.populateGitCoAuthors": "never",
	"liveshare.sharedTerminalHeight": 100,
	"liveshare.sharedTerminalWidth": 200,
	"liveshare.showReadOnlyUsersInEditor": "always",
	// #endregion

	// #region prettier config
	"prettier.enableDebugLogs": true,
	"prettier.printWidth": 79,
	"prettier.trailingComma": "none",
	"react-native-tools.networkInspector.consoleLogsColorTheme": "Dark",
	"redhat.telemetry.enabled": false,
	"search.exclude": {
		"**/.git": true,
		"**/.svn": true
	},
	"telemetry.enableCrashReporter": false,
	"telemetry.enableTelemetry": false,

	// #region window
	"window.customMenuBarAltFocus": false,
	"window.title": "${activeFolderShort}${separator}${activeEditorShort}",
	"window.titleBarStyle": "custom",
	"window.titleSeparator": " üê± ",
	"window.zoomLevel": 1,
	"workbench.colorTheme": "Community Material Theme High Contrast",
	"workbench.editor.untitled.hint": "hidden",
	"workbench.editorAssociations": {
		"*.ipynb": "jupyter.notebook.ipynb"
	},
	"workbench.enableExperiments": false,
	"workbench.iconTheme": "material-icon-theme",
	"workbench.settings.enableNaturalLanguageSearch": false,
	// #endregion

	"vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
}
